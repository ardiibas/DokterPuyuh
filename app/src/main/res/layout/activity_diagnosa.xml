<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_diagnosa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.amccdev.ibas.dokterpuyuh.diagnosa"
    android:background="@drawable/hubla">

    <LinearLayout
        android:id="@+id/layCek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--android:background="#E8F5E9">-->
        <CheckBox
            android:id="@+id/cek1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mata Merah"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/cek2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mata Bengkak"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/cek3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mata Berlendir"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/cek4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Susah Bernafas"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/cek5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lemas"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/cek6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diare"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/cek7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bercak Darah Pada Kotoran"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/cek8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mendekur"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/cek9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bergerak Melingkar dan Jatuh"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/txtHasil"
        android:layout_below="@id/layCek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>


    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/txtObat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHasil"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    
    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:textSize="15sp"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_green_dark"/>

</RelativeLayout>
